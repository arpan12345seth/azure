@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section (smaller height) -->
<section class="py-20 flex flex-col items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600 text-white px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-3">Welcome to My Website</h1>
    <p class="text-lg md:text-xl mb-5 max-w-xl">Design your digital presence with beauty, simplicity, and elegance.</p>
    <button class="bg-white text-blue-600 font-semibold px-5 py-2 rounded-full shadow-lg hover:bg-gray-200 transition">Get Started</button>
</section>

<!-- Features Section -->
<section class="py-10 bg-white">
    <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-3 gap-6 text-center">
        <div>
            <div class="text-3xl mb-2">✨</div>
            <h2 class="text-xl font-bold mb-1">Elegant Design</h2>
            <p class="text-sm">Beautiful UI that is clean, responsive, and user-friendly.</p>
        </div>
        <div>
            <div class="text-3xl mb-2">⚡</div>
            <h2 class="text-xl font-bold mb-1">Lightning Fast</h2>
            <p class="text-sm">Optimized for performance so your site loads instantly.</p>
        </div>
        <div>
            <div class="text-3xl mb-2">🔒</div>
            <h2 class="text-xl font-bold mb-1">Secure</h2>
            <p class="text-sm">Built with security best practices for peace of mind.</p>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="bg-gray-100 py-4 text-center text-xs text-gray-600">
    © 2025 Serenity — Designed by Arpan
</footer>
